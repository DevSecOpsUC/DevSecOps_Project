# Etapa 1: Build
FROM mcr.microsoft.com/dotnet/sdk:8.0 AS build
WORKDIR /src

# ðŸ”¹ Copiar solo el archivo .csproj del servicio
COPY Unidad1_AsegurandoCodigoFuente/rooms-service/rooms-service.csproj ./rooms-service.csproj
RUN dotnet restore rooms-service.csproj

# ðŸ”¹ Copiar el resto del cÃ³digo fuente
COPY Unidad1_AsegurandoCodigoFuente/rooms-service/ ./
RUN dotnet publish -c Release -o /app/publish

# Etapa 2: Runtime
FROM mcr.microsoft.com/dotnet/aspnet:8.0 AS runtime
WORKDIR /app

# ðŸ”¹ Variable para exponer el puerto
ENV ASPNETCORE_URLS=http://+:80

# ðŸ”¹ Copiar desde la etapa de build
COPY --from=build /app/publish .

# ðŸ”¹ Ejecutar el servicio
ENTRYPOINT ["dotnet", "rooms-service.dll"]
