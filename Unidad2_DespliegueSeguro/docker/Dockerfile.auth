# Etapa 1: CompilaciÃ³n
FROM mcr.microsoft.com/dotnet/sdk:8.0 AS build
WORKDIR /src

# Copiar archivo de proyecto y restaurar dependencias
COPY Unidad1_AsegurandoCodigoFuente/auth-service/*.csproj ./auth-service/
WORKDIR /src/auth-service
RUN dotnet restore

# Copiar todo el cÃ³digo fuente
COPY Unidad1_AsegurandoCodigoFuente/auth-service/. .

# Publicar el proyecto en modo Release
RUN dotnet publish -c Release -o /app/publish

# Etapa 2: Runtime
FROM mcr.microsoft.com/dotnet/aspnet:8.0 AS runtime
WORKDIR /app

# ðŸ”¹ Muy importante: Azure y Docker usan el puerto 80
ENV ASPNETCORE_URLS=http://+:80
EXPOSE 80

# Copiar el resultado de la compilaciÃ³n
COPY --from=build /app/publish .

# ðŸ”¹ Ejecutar el DLL del proyecto (verifica que coincida con tu .csproj)
ENTRYPOINT ["dotnet", "auth-service.dll"]
